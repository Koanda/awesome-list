*
  box-sizing border-box

body
  margin 0

  background-color #FEFEFE

  font-family Tahoma
  font-size 16px

main > header
  padding 2.5em 0
  margin-bottom .75em

  border-top 10px solid #0288D1
  background-color #03A9F5

  color #FFF
  text-align center
  font-size 2.5rem

  small
    display block
    font-size 0.5em

section
  padding-left 2em

  h1
    margin 0 0 1em 0
    font-size .9em
    color #8E8E8E

  ul
    list-style none
    margin 0 2em 2em 0

    li
      border-bottom 1px solid #EDEDED

      a
        text-decoration none

  article
    padding .5em 0
    color #989898

    header
      font-size 1.5em
      color #1C1C1C

    mark
      background-color transparent
      color darken(#989898, 30%)
